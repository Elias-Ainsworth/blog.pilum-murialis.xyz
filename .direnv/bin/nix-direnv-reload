#!/usr/bin/env bash
set -e
if [[ ! -d "/home/elias-ainsworth/projects/blog.pilum-murialis.xyz" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/elias-ainsworth/projects/blog.pilum-murialis.xyz")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/elias-ainsworth/projects/blog.pilum-murialis.xyz" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/elias-ainsworth/projects/blog.pilum-murialis.xyz/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/elias-ainsworth/projects/blog.pilum-murialis.xyz/.envrc" "/home/elias-ainsworth/projects/blog.pilum-murialis.xyz/.direnv"/*.rc
